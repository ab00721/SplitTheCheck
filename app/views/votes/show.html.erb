<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <h2 class="font-bold text-4xl">Viewing Vote</h2>

    <%= render @vote %>

    <div class="inline-block ml-2">
      <%= button_to "Delete this vote", vote_path(@vote), method: :delete, class: "format-button" %>
    </div>
    <%= link_to "Back to votes", votes_path, class: "format-button" %>
  </div>
</div>
